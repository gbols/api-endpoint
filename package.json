{
  "name": "api",
  "version": "1.0.0",
  "description": "creating several api endpoints",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "babel src -d dist",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha tests/testIndex.js --compilers js:babel-register --exit || true",
    "coveralls": "nyc npm test && nyc report --reporter=lcov --reporter=text --reporter=lcovonly || coveralls",
    "start": "nodemon index.js --exec babel-node --presets babel-preset-es2015"
  },

  "nyc": {
    "exclude": [
      "**/controllers/**",
      "**/model/**",
      "client"
    ],
    },
    "reporter": [
      "lcov",
      "text"
    ],
  "keywords": [
    "es6",
    "testing"
  ],
  "engine": {
    "node": "0.12.2"
  },
  "author": "olagunju gbolahan",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "joi": "^13.6.0"
  }
}
